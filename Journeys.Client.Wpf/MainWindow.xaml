<Window x:Class="Journeys.Client.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:j="clr-namespace:Journeys.Client.Wpf"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid>
            <j:AddJourneyUserControl x:Name="AddJourney" />
        </Grid>
        <DataGrid x:Name="JourneysWithLiftsList"
                  AutoGenerateColumns="False"
                  Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding DateOfOccurrence}" Header="Date of occurence}"/>
                <DataGridTextColumn Binding="{Binding Distance}" Header="Distance"/>
                <DataGridTextColumn Binding="{Binding PassengerName}" Header="Passenger name"/>
                <DataGridTextColumn Binding="{Binding PassengerLiftDistance}" Header="Passenger lift distance"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
