<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:f="clr-namespace:Journeys.Client.Wpf.Features.AddJourneysWithLifts"
                    xmlns:n="clr-namespace:Journeys.Client.Wpf.Infrastructure.Notifications">
    <Style TargetType="f:AddJourneyWithLiftControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="f:AddJourneyWithLiftControl">
                    <Grid>
                        <ToggleButton x:Name="ContentToggler"
                                      Content="Add journey"/>
                        <Popup IsOpen="{Binding IsChecked, ElementName=ContentToggler, Mode=TwoWay}"
                               Placement="Bottom"
                               PlacementTarget="{Binding ElementName=ContentToggler}"
                               Width="400">
                            <Grid>
                                <Grid.Background>
                                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.WindowColorKey}}"/>
                                </Grid.Background>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Label Content="Route distance"/>
                                <TextBox Grid.Column="1"
                                         Text="{Binding RouteDistance}"/>
                                <Label Grid.Row="1"
                                       Content="Date of occurrence" />
                                <DatePicker Grid.Row="1"
                                            Grid.Column="1"
                                            SelectedDate="{Binding DateOfOccurrence}"/>
                                <Label Grid.Row="2"
                                       Content="Passenger name" />
                                <TextBox Grid.Row="2"
                                         Grid.Column="1"
                                         Text="{Binding PassengerName}" />
                                <Label Grid.Row="3"
                                       Content="Lift distance" />
                                <TextBox Grid.Row="3"
                                         Grid.Column="1"
                                         Text="{Binding LiftDistance}" />
                                <Grid Grid.Row="4"
                                      Grid.ColumnSpan="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <n:NotifierControl DataContext="{Binding Notification}" />
                                    <Button x:Name="AddButton"
                                            Grid.Column="1"
                                            HorizontalAlignment="Right"
                                            Content="Add" />
                                </Grid>
                            </Grid>
                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>