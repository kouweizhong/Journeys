<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:f="clr-namespace:Journeys.Client.Wpf.Features.ShowJourneysWithLifts">
    <Style TargetType="f:JourneysWithLiftsControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="f:JourneysWithLiftsControl">
                    <DataGrid x:Name="JourneysWithLiftsList"
                              AutoGenerateColumns="False"
                              ItemsSource="{Binding Items}"
                              IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding DateOfOccurrence}" Header="Date of occurence"/>
                            <DataGridTextColumn Binding="{Binding RouteDistance}" Header="Route distance"/>
                            <DataGridTextColumn Binding="{Binding PassengerName}" Header="Passenger name"/>
                            <DataGridTextColumn Binding="{Binding PassengerLiftDistance}" Header="Passenger lift distance"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>